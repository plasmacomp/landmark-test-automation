                <include name="verifyLotsLabel"/>
                <include name="verifyNotesLabel"/>
                <include name="verifyAttachmentsLabel"/>
                <include name="verifyAddSalesInformation"/>
                <include name="verifyAddVendorInfo"/>
                <include name="verifyAddLotsInfo"/>
